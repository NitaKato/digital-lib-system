<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Biblioteka e Qytetit - Lipjan</title>
    <meta name="viewport" content="width=device-width, initial-scale=1" />
    <style>
      #frm-add-school label.error {
        color: red;
      }
    </style>
    <%- include("./../admin/partials/includes/styles") %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <%- include("./../admin/partials/includes/top-nav") %> <%-
      include("./../admin/partials/includes/sa_sidebar") %>
    </div>

    <div class="content-wrapper">
      <div class="content-header">
        <div class="container-fluid">
          <div class="row mb-2">
            <div class="col-sm-6">
              <h1 class="m-0">Modifiko Shkollën</h1>
            </div>
            <div class="col-sm-6">
              <ol class="breadcrumb float-sm-right">
                <li class="breadcrumb-item">
                  <a href="/superadmin/homepage">Ballina</a>
                </li>
                <li class="breadcrumb-item active">Modifiko Shkollën</li>
              </ol>
            </div>
          </div>
        </div>
      </div>
      <section class="content">
        <div class="container-fluid">
          <div class="row">
            <div class="col-md-12">
              <% if(messages.success){ %>
              <div class="alert alert-success"><%= messages.success %></div>
              <% } %> <% if(messages.error){ %>
              <div class="alert alert-danger"><%= messages.error %></div>
              <% } %>
              <div class="card card-dark">
                <div class="card-header">
                  <h3 class="card-title">Modifiko Shkollën</h3>
                </div>
                <div class="card-body">
                  <form
                    id="frm-add-school"
                    name="frm-add-school"
                    method="POST"
                    action="/superadmin/schools/edit-school/<%=school.id%>"
                  >
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label>Emri i Shkollës</label>
                          <input
                            value="<%=school.name%>"
                            type="text"
                            class="form-control"
                            placeholder="Shëno emrin"
                            name="name"
                            required
                          />
                        </div>
                      </div>
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label>Vendi</label>
                          <input
                            value="<%=school.city%>"
                            type="text"
                            class="form-control"
                            placeholder="Shëno vendin"
                            name="city"
                            required
                          />
                        </div>
                      </div>
                    </div>
                    <div class="row">
                      <div class="col-sm-6">
                        <div class="form-group">
                          <label>Adresa</label>
                          <textarea
                            name="address"
                            class="form-control"
                            placeholder="Shëno adresën"
                          >
<%=school.address%></textarea
                          >
                        </div>
                      </div>
                    </div>

                    <button class="btn btn-dark" type="submit">Modifiko</button>
                  </form>
                </div>
              </div>
            </div>
          </div>
        </div>
      </section>
    </div>

    <%- include('./../admin/partials/footer') %>
  </body>
</html>
