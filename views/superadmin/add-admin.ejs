<!DOCTYPE html>
<html>
  <head>
    <meta charset="utf-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <title>Biblioteka e Qytetit - Lipjan</title>

    <meta name="viewport" content="width=device-width, initial-scale=1" />

    <%- include("./../admin/partials/includes/styles") %>
  </head>
  <body class="hold-transition sidebar-mini layout-fixed">
    <div class="wrapper">
      <%- include("./../admin/partials/includes/top-nav") %> <%-
      include("./../admin/partials/includes/sa_sidebar") %>
    </div>
  </body>
  <div class="content-wrapper">
    <div class="content-header">
      <div class="container-fluid">
        <div class="row mb-2">
          <div class="col-sm-6">
            <h1 class="m-0">Shto Admin</h1>
          </div>
          <div class="col-sm-6">
            <ol class="breadcrumb float-sm-right">
              <li class="breadcrumb-item">
                <a href="/superadmin/homepage">Ballina</a>
              </li>
              <li class="breadcrumb-item active">Shto Admin</li>
            </ol>
          </div>
        </div>
      </div>
    </div>
    <section class="content">
      <div class="container-fluid">
        <div class="row">
          <div class="col-md-12">
            <% if(messages.success){ %>
            <div class="alert alert-success"><%= messages.success %></div>
            <% } %> <% if(messages.error){ %>
            <div class="alert alert-danger"><%= messages.error %></div>
            <% } %>
            <div class="card card-dark">
              <div class="card-header">
                <h3 class="card-title">Shto Admin</h3>
              </div>
              <div class="card-body">
                <form
                  id="frm-add-user"
                  name="frm-add-user"
                  method="POST"
                  action="/superadmin/add-admin"
                >
                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Emri</label>
                        <input
                          type="text"
                          class="form-control"
                          placeholder="Shëno emrin"
                          name="name"
                          required
                        />
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Email</label>
                        <input
                          type="email"
                          class="form-control"
                          placeholder="Shëno email"
                          name="email"
                          required
                        />
                      </div>
                    </div>
                  </div>

                  <div class="row">
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Numri Personal (10 shifra)</label>
                        <input
                          id="id_number"
                          type="text"
                          class="form-control"
                          placeholder="Enter personal ID number"
                          pattern="[0-9]{10}"
                          name="personal_number"
                          maxlength="10"
                          minlength="10"
                          required
                        />
                      </div>
                    </div>
                    <div class="col-sm-6">
                      <div class="form-group">
                        <label>Selekto Shkollën</label>
                        <select
                          class="form-control"
                          required
                          name="schoolId"
                          id=""
                        >
                          <option value="">Zgjedh shkollën</option>
                          <% schools.forEach(school => { %>
                          <option value="<%=school.id%>">
                            <%=school.name%>
                          </option>
                          <% }) %>
                        </select>
                      </div>
                    </div>
                  </div>

                  <button class="btn btn-dark" type="submit">Shto</button>
                </form>
              </div>
            </div>
          </div>
        </div>
      </div>
    </section>
  </div>

  <%- include('./../admin/partials/footer') %>
</html>
