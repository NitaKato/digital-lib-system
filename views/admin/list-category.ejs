<%- include('partials/header') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">List Category</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">List Category</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-md-12">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">List Category</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table
                id="tbl-list-category"
                class="table table-bordered table-striped"
              >
                <thead>
                  <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </thead>
                <tbody>
                  <% categories.forEach(category => { %>
                  <tr>
                    <td><%= category.id %></td>
                    <td><%= category.name %></td>
                    <td>
                      <% if (category.status == '1') { %>
                      <button class="btn">Active</button>
                      <% } else { %>
                      <button class="btn btn-danger">Not Active</button>
                      <% } %>
                    </td>
                    <td>
                      <a
                        href="/admin/edit-category/<%=category.id%>"
                        class="btn"
                        ><i class="fa fa-edit"></i
                      ></a>
                      <form
                        method="post"
                        action="/admin/delete-category"
                        id="frm-delete-category-<%= category.id %>"
                      >
                        <input
                          type="hidden"
                          value="<%= category.id %>"
                          name="category_id"
                        />
                      </form>

                      <a
                        href="javascript:void(0)"
                        onclick="if(confirm('Are you sure want to delete ? ')){  $('#frm-delete-category-<%= category.id %>').submit()  }"
                        class="btn btn-danger"
                        ><i class="fa fa-trash"></i
                      ></a>
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
                <tfoot>
                  <tr>
                    <th>#ID</th>
                    <th>Name</th>
                    <th>Status</th>
                    <th>Action</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('partials/footer') %>
