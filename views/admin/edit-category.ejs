<%- include('partials/header') %>

<style>
  #frm-add-category label.error {
    color: red;
  }
</style>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Modifiko Kategorinë</h1>
        </div>
    
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Ballina</a></li>
            <li class="breadcrumb-item active">Modifiko Kategorinë</li>
          </ol>
        </div>
  
      </div>
 
    </div>
  </div>
  <section class="content">
    <div class="container-fluid">
   
      <div class="row">
        <div class="col-md-12">
           <% if(messages.success){ %>
          <div class="alert alert-success"><%= messages.success %></div>
          <% } %> <% if(messages.error){ %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %>
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">Modifiko Kategorinë</h3>
            </div>
         
            <div class="card-body">
              <form
                id="frm-add-category"
                name="frm-add-category"
                method="POST"
                action="/admin/categories/edit-category/<%=category.id%>"
              >
                <div class="row">
                  <div class="col-sm-6">
                
                    <div class="form-group">
                      <label>Emri</label>
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Shëno emrin"
                        name="name"
                        value="<%= category.name  %>"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Selekto statusin</label>
                      <select class="form-control" name="status" id="">
                        <option <% if(category.status == '1') {%> selected <%  } %>  value="1">Aktiv</option>
                        <option <% if(category.status == '0') {%> selected <%  } %> value="0">Jo Aktiv</option>
                      </select>
                    </div>
                  </div>
                </div>
                <button class="btn btn-dark" type="submit">Modifiko</button>
              </form>
            </div>

        
          </div>
         
        </div>
      </div>
 
    </div>

  </section>

</div>

<%- include('partials/footer') %>
