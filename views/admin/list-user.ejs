<%- include('partials/header') %>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Listo Nxënësit</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Ballina</a></li>
            <li class="breadcrumb-item active">Listo Nxënësit</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">Listo Nxënësit</h3>
            </div>

            <div class="card-body">
              <table
                id="tbl-list-user"
                class="table table-bordered table-striped"
              >
                <thead>
                  <tr>
                    <th>Emri</th>
                    <th>Email</th>
                    <th>Telefoni</th>
                    <th>Statusi</th>
                    <th>Ndrysho</th>
                  </tr>
                </thead>
                <tbody>
                  <% users.forEach(user => { %>
                  <tr>
                    <td><%=user.name%></td>
                    <td><%=user.email%></td>
                    <td><%=user.mobile%></td>
                    <td>
                      <% if (user.status == '1') { %>
                      <button class="btn">Aktiv</button>
                      <% } else { %>
                      <button class="btn btn-danger">Jo Aktiv</button>
                      <% } %>
                    </td>
                    <td>
                      <a href="/admin/users/edit-user/<%=user.id%>" class="btn"
                        ><i class="fa fa-edit"> Modifiko</i></a
                      >
                      <form
                        method="post"
                        action="/admin/users/delete-user"
                        id="frm-delete-user-<%= user.id %>"
                      >
                        <input
                          type="hidden"
                          value="<%= user.id %>"
                          name="user_id"
                        />
                      </form>

                      <a
                        href="javascript:void(0)"
                        onclick="if(confirm('Jeni të sigurtë që doni të fshini? Ky proces nuk mund të kthehet.')){  $('#frm-delete-user-<%= user.id %>').submit()  }"
                        class="btn btn-danger"
                        ><i class="fa fa-trash"> Fshij</i></a
                      >
                    </td>
                  </tr>
                  <% }) %>
                </tbody>
                <tfoot>
                  <tr>
                    <th>Emri</th>
                    <th>Email</th>
                    <th>Telefoni</th>
                    <th>Statusi</th>
                    <th>Ndrysho</th>
                  </tr>
                </tfoot>
              </table>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>
