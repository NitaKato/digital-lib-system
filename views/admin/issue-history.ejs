<%- include('partials/header') %>

<!-- Content Wrapper. Contains page content -->
<div class="content-wrapper">
  <!-- Content Header (Page header) -->
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">List Issue Books</h1>
        </div>
        <!-- /.col -->
        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="#">Home</a></li>
            <li class="breadcrumb-item active">List Issue Books</li>
          </ol>
        </div>
        <!-- /.col -->
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </div>
  <!-- /.content-header -->

  <!-- Main content -->
  <section class="content">
    <div class="container-fluid">
      <!-- Small boxes (Stat box) -->
      <div class="row">
        <div class="col-md-12">
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">List Issue Books</h3>
            </div>
            <!-- /.card-header -->
            <div class="card-body">
              <table
                id="tbl-list-issue-books"
                class="table table-bordered table-striped"
              >
                <thead>
                  <tr>
                    <th>Category Name</th>
                    <th>Book</th>
                    <th>User Info</th>
                    <th>Total Days</th>
                    <th>Issue Date</th>
                  </tr>
                </thead>
                <tbody>
                  <% list.forEach(item => { %>
                  <tr>
                    <td><%=item.category.name%></td>
                    <td><%=item.book.name%></td>
                    <td>
                      <%=item.user.name%> <br />
                      <%=item.user.email%>
                    </td>
                    <td><%=item.days_issued%></td>
                    <td><%=item.issued_date%></td>
                  </tr>
                  <% }) %>
                </tbody>
                <tfoot>
                  <tr>
                    <th>Category Name</th>
                    <th>Book</th>
                    <th>User Info</th>
                    <th>Total Days</th>
                    <th>Issue Date</th>
                  </tr>
                </tfoot>
              </table>
            </div>
            <!-- /.card-body -->
          </div>
        </div>
      </div>
      <!-- /.row -->
    </div>
    <!-- /.container-fluid -->
  </section>
  <!-- /.content -->
</div>

<%- include('partials/footer') %>
