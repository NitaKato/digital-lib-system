<%- include('partials/header') %>

<style>
  #frm-add-user label.error {
    color: red;
  }
</style>

<div class="content-wrapper">
  <div class="content-header">
    <div class="container-fluid">
      <div class="row mb-2">
        <div class="col-sm-6">
          <h1 class="m-0">Shto Nxënës</h1>
        </div>

        <div class="col-sm-6">
          <ol class="breadcrumb float-sm-right">
            <li class="breadcrumb-item"><a href="/admin">Ballina</a></li>
            <li class="breadcrumb-item active">Shto Nxënës</li>
          </ol>
        </div>
      </div>
    </div>
  </div>

  <section class="content">
    <div class="container-fluid">
      <div class="row">
        <div class="col-md-12">
          <% if(messages.success){ %>
          <div class="alert alert-success"><%= messages.success %></div>
          <% } %> <% if(messages.error){ %>
          <div class="alert alert-danger"><%= messages.error %></div>
          <% } %>
          <div class="card card-dark">
            <div class="card-header">
              <h3 class="card-title">Shto Nxënës</h3>
            </div>

            <div class="card-body">
              <form
                id="frm-add-user"
                name="frm-add-user"
                method="POST"
                action="/admin/users/add-user/"
              >
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Emri</label>
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Shëno emrin"
                        name="name"
                        required
                      />
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Email</label>
                      <input
                        type="email"
                        class="form-control"
                        placeholder="Shëno email"
                        name="email"
                        required
                      />
                    </div>
                  </div>
                </div>
                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Numri i Telefonit</label>
                      <input
                        type="text"
                        class="form-control"
                        placeholder="Shëno numrin e telefonit"
                        name="mobile"
                        required
                      />
                    </div>
                  </div>

                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Selekto gjininë</label>
                      <select required class="form-control" name="dd_gender">
                        <option value="">Zgjedh gjininë</option>
                        <option value="male">Mashkull</option>
                        <option value="female">Femër</option>
                      </select>
                    </div>
                  </div>
                </div>

                <div class="row">
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Adresa</label>
                      <textarea
                        name="address"
                        class="form-control"
                        placeholder="Shëno adresën"
                      ></textarea>
                    </div>
                  </div>
                  <div class="col-sm-6">
                    <div class="form-group">
                      <label>Selekto statusin</label>
                      <select class="form-control" name="status" id="">
                        <option value="1">Aktiv</option>
                        <option value="0">Jo Aktiv</option>
                      </select>
                    </div>
                  </div>
                </div>

                <button class="btn btn-dark" type="submit">Shto</button>
              </form>
            </div>
          </div>
        </div>
      </div>
    </div>
  </section>
</div>

<%- include('partials/footer') %>
